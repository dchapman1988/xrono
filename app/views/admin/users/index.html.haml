- content_for :javascripts do
  :javascript
    $(function() {
      $( "#accordion" ).accordion({autoHeight: false});
    })

%h2= t(:all_users)

= render partial: 'admin/nav'

= link_to t(:new_user), new_admin_user_path, class: "add_new_button btn primary"

#accordion
  - unless @users[:unlocked].empty?
    %h3= link_to t(:active_users), '#'
    %div
      %table.users.zebra-striped
        %thead
          %tr
            %th
            %th= t(:name)
            %th= t(:email)
            %th= t(:current)
            %th= t(:target_hours_offset)
            %th= t(:roles)
            %th= t(:edit)
            %th= t(:pto_left)
        %tbody
          - @users[:unlocked].each do |user|
            %tr{ class: cycle("odd", "even") }
              %td.user_img
                = link_to "#{show_gravatar_for(user)}".html_safe,
                  user_path(user)
              %td
                = link_to "<span>#{user}</span>".html_safe, 
                  user_path(user) 
              %td= user.email
              %td= user.unpaid_work_units.sum(:hours)
              %td= user.daily_target_hours ? user.target_hours_offset(Date.current).to_s : ''
              %td
                - if user.admin?
                  = t(:admin)
                - else
                  = link_to t(:roles), projects_admin_user_path(user)
              %td= link_to t(:edit), edit_admin_user_path(user)
              %td= user.pto_hours_left(Date.current)
  - unless @users[:locked].empty?
    %h3= link_to t(:inactive_users), '#'
    %div
      %table.users.zebra-striped
        %thead
          %tr
            %th
            %th= t(:name)
            %th= t(:email)
            %th= t(:current)
            %th= t(:target_hours_offset)
            %th= t(:roles)
            %th= t(:edit)
            %th= t(:pto_left)
        %tbody
          - @users[:locked].each do |user|
            %tr{ class: cycle("odd", "even") }
              %td.user_img
                = link_to "#{show_gravatar_for(user)}".html_safe,
                  user_path(user)
              %td
                = link_to "<span>#{user}</span>".html_safe, 
                  user_path(user) 
              %td= user.email
              %td= user.unpaid_work_units.sum(:hours)
              %td= user.daily_target_hours ? user.target_hours_offset(Date.current).to_s : ''
              %td
                - if user.admin?
                  = t(:admin)
                - else
                  = link_to t(:roles), projects_admin_user_path(user)
              %td= link_to t(:edit), edit_admin_user_path(user)
              %td= user.pto_hours_left(Date.current)
