.module
  = form_for @user, class: "new_user", url: admin_users_path do |f|
    %fieldset
      %legend= t(:new_user)
      .clearfix
        = f.label :first_name
        .input
          = f.text_field :first_name
      .clearfix
        = f.label :last_name
        .input
          = f.text_field :last_name
      .clearfix
        = f.label :middle_initial
        .input
          = f.text_field :middle_initial
      .clearfix
        = f.label :email
        .input
          = f.text_field :email
      .clearfix
        = f.label :password
        .input
          = f.password_field :password
      .clearfix
        = f.label :password_confirmation
        .input
          = f.password_field :password_confirmation
      .actions
        = f.submit t(:create), class: 'add_new_button btn primary'

        = link_to t(:cancel), admin_users_path, class: 'cancel_button btn'
